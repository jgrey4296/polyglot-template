# #  cargo-init-polyglot -*- mode: sh -*-

# script to init the polyglot project.

set -euo pipefail
current_script_path="${BASH_SOURCE[0]}"
current_dir=$(dirname "$current_script_path")



while [[ $# -gt 0 ]]; do
    case $1 in
        -t|--target)
            echo "Target: "
            ;;
        --*=*)
            echo "Assignment: $1"
            ;;
        *) # Positional
            echo "Positional: $1"
            ;;
    esac
    shift
done

function init_asdf () {
    asdf install
}

function init_jvm () {
    # https://sdkman.io/install/
    source "$SDKMAN_DIR/bin/sdkman-init.sh"
}

function init_android (){
    # https://developer.android.com/studio#command-line-tools-only
}

function init_dotnet () {
    dotnet new sln
    dotnet sln add ./src/cs_*

}

function init_precommit () {
    pre-commit install
}


init_precommit

exit 0
