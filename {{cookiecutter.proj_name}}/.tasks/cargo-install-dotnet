# #  cargo-install-dotnet -*- mode: sh -*-
# https://learn.microsoft.com/en-us/dotnet/core/install/linux-scripted-manual#scripted-install
#

if [ -d "$HOME/.local/dotnet" ]; then
    echo "Dotnet installed"
else
    echo "Installing Dotnet"
    mkdir -p .temp/dotnet
    wget https://dot.net/v1/dotnet-install.sh -O ./.temp/dotnet/dotnet-install.sh
    chmod +x ./.temp/dotnet/dotnet-install.sh
    ./.temp/dotnet/dotnet-install.sh --install-dir "$HOME/.local/dotnet"
fi

# Initialising solution
dotnet new sln
dotnet sln add ./src/cs_*
